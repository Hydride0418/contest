<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yjp.dao.AwardDao">
    <select id="listAward" resultType="yjp.pojo.Award">
        select *
        from city.award;
    </select>
    <insert id="addAward" parameterType="yjp.pojo.Award">
        insert into city.award(name, type, grade, cont_id, org_id, user_id, team_id)
        values (#{name}, #{type}, #{grade}, #{cont_id}, #{org_id}, #{user_id}, #{team_id})
    </insert>
    <update id="addTeamAward" parameterType="int">
        update city.team
        set is_award = 1
        where id = #{team_id}
    </update>
    <update id="addOrgAward" parameterType="int">
        update city.organization
        set is_award = 1
        where id = #{org_id}
    </update>
    <delete id="deleteAward" parameterType="int">
        delete
        from city.award
        where id = #{id}
    </delete>
    <update id="modifyAward" parameterType="yjp.pojo.Award">
        update city.award
        set name    = #{name},
            type    = #{type},
            grade   = #{grade},
            cont_id = #{cont_id},
            org_id  = #{org_id},
            user_id = #{user_id},
            team_id = #{team_id}
        where id = #{id}
    </update>
    <resultMap id="awardMap" type="Award">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="user_id" column="a_user_id"></result>
        <association property="user" javaType="User">
            <id property="id" column="id"></id>
            <result property="team_id" column="u_team_id"></result>
        </association>
        <association property="team" javaType="Team">
            <id property="id" column="id"></id>
            <result property="name" column="t_name"></result>
            <result property="question_id" column="t_ques_id"></result>
        </association>
        <association property="track" javaType="Track">
            <id property="id" column="id"></id>
            <result property="contest_id" column="t_c_id"></result>
        </association>
        <association property="question" javaType="Question">
            <id property="id" column="id"></id>
            <result property="name" column="q_name"></result>
            <result property="track_id" column="q_tr_id"></result>
        </association>
        <association property="contest" javaType="Contest">
            <id property="id" column="id"></id>
            <result property="name" column="c_name"></result>
        </association>
    </resultMap>
    <select id="searchAward" resultMap="awardMap">
        select a.*, c.name c_name, q.name q_name, t.name t_name
        from ((((award a inner join city.user u on a.user_id = u.id) inner join city.team t on u.team_id = t.id) inner join city.question q on t.question_id = q.id) inner join city.track tr on q.track_id = tr.id) inner join city.contest c on tr.contest_id = c.id
        <where>
            <if test="user_id != null and user_id != ''">
                and a.user_id = #{user_id}
            </if>
        </where>
    </select>
</mapper>